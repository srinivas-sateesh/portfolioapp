<h1 id="page_title">Say Hello!</h1>
<div class="skinny_wrapper wrapper_padding">
  <%= form_for @contact do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name%>
    
    <%= f.label :email%>
    <%= f.email_field :email%>
  
    <%= f.label :message%><br>
    <%= f.text_area :message, as: :text%>
  
  
    
    <div class="hidden">
       <%= f.label :nickname %>
       <%= f.text_field :nickname, hint: "leave this blank" %>
    </div>
  
  <%= f.submit 'Send Message', class: :button %>
  
  <%end%>
</div>  
